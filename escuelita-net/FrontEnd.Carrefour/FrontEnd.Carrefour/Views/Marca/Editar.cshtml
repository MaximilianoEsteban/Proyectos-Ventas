@model FrontEnd.Carrefour.Models.MarcaModel


<div>
    <div class="mb-5">
        <h1>Editar Marca</h1>
    </div>
    <div>
        <form action="/Marca/Editar" method="post">
            <input type="hidden" id="Id" name="Id">

            <div class="row">
                <div class="form-group col-md-3">
                    <label for="nombreMarca">Edicion de la Marca</label>
                    <input type="text" class="form-control" id="nombreMarca" name="nombreMarca" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary ">Guardar</button>
                </div>                
            </div>

        </form>
    </div>
</div>
@section Scripts {
    <script src="~/js/Marca/Editar.js" asp-append-version="true"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            console.log("documentreadyeditarHTML");
            cargarFormulario(JSON.parse('@Json.Serialize(Model)'));
        });
    </script>
}