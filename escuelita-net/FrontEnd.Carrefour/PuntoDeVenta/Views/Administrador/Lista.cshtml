@model List<UsuarioModel>

@{
    ViewData["Title"] = "Administrador";

}

<div>   
    <div class="mb-5">
        <h1>Usuarios registrados</h1>
    </div>

    <table id="tbl-Usuario" class="table table-striped table-bordered mt-3">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Email</th>
                <th>Password</th>
                <th>Perfil</th>
                <th>Fecha de Alta</th>
                <th>Fecha registro de password</th>
                <th>Opciones</th>
            </tr>
        </thead>
        <tbody>
            
            @if (Model != null)
            {
                @foreach (var u in Model)
                {
                    <tr>
                        <td>@u.Nombre</td>
                        <td>@u.Apellido</td>
                        <td>@u.Email</td>
                        <td>@u.Password</td>
                        <td>@u.NombrePerfil</td>
                        <td>@u.FechaCreacion</td>
                        <td>@u.FechaPassword</td>
                        <td>
                            @* Usando ('@u.IdUsuario') determino que la variable es string por eso las '' *@

                            <button class="btn btn-info" onclick="editarUsuario('@u.IdUsuario')">Editar</button>
                        </td>
                    </tr>
                }
            }

        </tbody>
    </table>
</div>
@section Scripts {
    <script type="text/javascript">
        function editarUsuario(IdUsuario) {
            window.location.href = "/Administrador/EditarPassword?IdUsuario=" + IdUsuario;
        }
    </script>

    <script src="~/js/Usuario/Listar.js" asp-append-version="true"></script>   
}
