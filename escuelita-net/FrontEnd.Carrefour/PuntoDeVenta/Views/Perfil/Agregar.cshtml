    @model PuntoDeVenta.Models.PerfilModel

<div>
    <div class="mb-5">
        <h1>Alta de Perfil</h1>
    </div>
    <div>
        <form action="Perfil/Agregar" method="post">            

            <div class="row">
                <div class="form-group col-md-3">
                    <label for="Nombre">Nombre del perfil</label>
                    <input type="text" class="form-control" id="Nombre" name="Nombre" />

                </div>
            </div>

            <div class="row">
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary ">Guardar</button>
                </div>
            </div>

        </form>
    </div>

</div>
@section Scripts {
    <script src="~/js/Perfil/Agregar.js" asp-append-version="true"></script>
}