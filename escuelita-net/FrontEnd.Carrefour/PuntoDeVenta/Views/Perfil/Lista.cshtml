@model List<PerfilModel>

@{
}

<div>
    <div class="mb-5">
        <h1>Lista de perfiles</h1>
    </div>  

    <div>
        <button class="btn btn-primary" onclick="irAgregar()">Agregar</button>


        <table id="tbl-Perfil" class="table table-striped table-bordered mt-3">
            <thead>
                <tr>
                    <th>Perfiles</th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var p in Model)
                {

                    <tr>
                        <td>@p.Nombre</td>
                        <td>
                            <button class="btn btn-info" onclick="editarPerfil(@p.IdPerfil)">Editar</button>
                            <button class="btn btn-danger" onclick="mostrarModalEliminar(@p.IdPerfil)">Eliminar</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="modal fade" id="eliminarPerfilModal" role="dialog" tabindex="-1" aria-labelledby="eliminarPerfilModal" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Eliminar Perfil</h5>
                </div>
                <div class="modal-body">
                    Esta seguro que desea eliminar el perfil?
                    <input type="hidden" id="IdPerfilEliminar" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" onclick="eliminar()">Eliminar</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="ocultarModalEliminar()">Cancelar</button>
                </div>
            </div>
        </div>
    </div>


</div>

@section Scripts {

<script type="text/javascript">
    function editarPerfil(IdPerfil) 
    {
        window.location.href = "/Perfil/Editar?IdPerfil=" + IdPerfil;
    }
</script>

<script src="~/js/Perfil/Listar.js" asp-append-version="true"></script>
<script src="~/js/Perfil/Eliminar.js" asp-append-version="true"></script>
}